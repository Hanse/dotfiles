
# This script installs Ruby on Rails and cleans it up a little bit.

appName=$1

rails new $appName
cd $appName
rm public/index.html
rm README.rdoc
rm -rf doc
echo "# $appName" > README.md

cp config/database.yml config/database.example.yml
echo "config/database.yml" >> .gitignore

echo "
development:
  adapter: postgresql
  database: $appName
  host: localhost
" > config/database.yml

echo "
source 'http://rubygems.org'

gem 'rails'
gem 'pg'
gem 'thin'

group :assets do
  gem 'sass-rails'
  gem 'coffee-rails'
  gem 'uglifier'
  gem 'compass-rails'
end

group :development do
  gem 'brice'
  gem 'awesome_print'
  gem 'hirb'
  gem 'annotate'
end

group :production do
  gem 'unicorn'
  gem 'newrelic_rpm'
end

gem 'jquery-rails'
" > Gemfile

echo "
# If you have a very small app you may be able to
# increase this, but in general 3 workers seems to
# work best
worker_processes 3

# Load your app into the master before forking
# workers for super-fast worker spawn times
preload_app true

# Immediately restart any workers that
# haven't responded within 30 seconds
timeout 30
" > config/unicorn.rb

echo 'web: bundle exec unicorn_rails -p $PORT -c ./config/unicorn.rb' > Procfile

bundle install
git init


